@model Sotrudnik

<form method="post" enctype="multipart/form-data">
	<div>
		<h3 class="text-center">Редактировать Сотрудники</h3>
	</div>

	<div class="text-danger font-weigh-bold" asp-validation-summary="All"></div>

	<input type="hidden" name="Id" value="@Model?.Id" />

	<div class=" row">
		<div class="col-6">
			<label asp-for="LastName">Фамиля</label> <br />
			<input class="col-form-label-sm" asp-for="LastName" value="@Model?.LastName" />
			<span asp-validation-for="LastName"></span>
		</div>
	</div>

	<div class=" row">
		<div class="col-6">
			<label asp-for="FirstName">Имя</label> <br />
			<input type="text" class="col-form-label-sm" asp-for="FirstName" value="@Model?.FirstName" />
			<span asp-validation-for="FirstName"></span>
		</div>
	</div>

	<div class=" row">
		<div class="col-6">
			<label asp-for="MiddleName">Отчество </label> <br />
			<input class="col-form-label-sm" asp-for="MiddleName" value="@Model?.MiddleName" />
			<span asp-validation-for="MiddleName"></span>
		</div>
	</div>

	<div class=" row">
		<div class="col-6">
			<label asp-for="DateOfBirth">Дата рождения</label> <br />
			<input type="date" class="col-form-label-sm" asp-for="DateOfBirth" value="@Model?.DateOfBirth" />
			<span asp-validation-for="DateOfBirth"></span>
		</div>
	</div>

	<div class=" row">
		<div class="col-6">
			<label asp-for="PassportSeries">Серия Паспорт</label> <br />
			<input class="col-form-label-sm" asp-for="PassportSeries" value="@Model?.PassportSeries" />
			<span asp-validation-for="PassportSeries"></span>
		</div>
	</div>

	<div class=" row">
		<div class="col-6">
			<label asp-for="PassportNumber">Номер Паспорт</label> <br />
			<input class="col-form-label-sm" asp-for="PassportNumber" value="@Model?.PassportNumber" />
			<span asp-validation-for="PassportNumber"></span>
		</div>
	</div>

	<br />
	<hr />
	<div>
		<button type="submit" asp-area="" asp-controller="Sotrudnik" asp-action="Edit">Обнавить</button>
	</div>
</form>
<br />
<div><a asp-controller="Sotrudnik" asp-action="Index">Назад</a></div>