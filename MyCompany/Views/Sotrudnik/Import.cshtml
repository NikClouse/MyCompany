@model IFormFile

<form method="post" enctype="multipart/form-data" asp-action="Import">
    <div class="form-group">
        <div class="col-md-10">
            <p>Загрузите CSV-файл:</p>
            <input type="file" name="file" />
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10">
            <input type="submit" value="Загрузить" class="btn btn-default" />
        </div>
    </div>
</form>