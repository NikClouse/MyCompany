
@model Organization

<form method="post" enctype="multipart/form-data">
	<div>
		<h3 class="text-center">Редактировать Организация</h3>
	</div>

	<div class="text-danger font-weigh-bold" asp-validation-summary="All"></div>

	<input type="hidden" name="Id" value="@Model?.Id" />

	<div class=" row">
		<div class="col-6">
			<label asp-for="Name">Название Организация</label> <br />
			<input class="col-form-label-sm" asp-for="Name" value="@Model?.Name" />
			<span asp-validation-for="Name"></span>
		</div>
	</div>

	<div class=" row">
		<div class="col-6">
			<label asp-for="TaxId">ИНН</label> <br />
			<input type="number" class="col-form-label-sm" asp-for="TaxId" value="@Model?.TaxId" />
			<span asp-validation-for="TaxId"></span>
		</div>
	</div>

	<div class=" row">
		<div class="col-6">
			<label asp-for="LegalAddress">Юридический адрес</label> <br />
			<input class="col-form-label-sm" asp-for="LegalAddress" value="@Model?.LegalAddress" />
			<span asp-validation-for="LegalAddress"></span>
		</div>
	</div>
	
	<div class=" row">
		<div class="col-6">
			<label asp-for="ActualAddress">Фактический адрес</label> <br />
			<input class="col-form-label-sm" asp-for="ActualAddress" value="@Model?.ActualAddress" />
			<span asp-validation-for="ActualAddress"></span>
		</div>
	</div>
	
	<br />
	<div>
		<button type="submit" asp-area="" asp-controller="Organization" asp-action="Edit">Обнавить</button>
	</div>
</form>
<br />
<div><a asp-controller="Organization" asp-action="Index">Назад</a></div>